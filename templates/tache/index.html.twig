{% extends 'baseback.html.twig' %}

{% block title %}Tache index{% endblock %}

{% block body %}
    <h1>Tache index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdTache</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Deadline</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tache in taches %}
            <tr>
                <td>{{ tache.idTache }}</td>
                <td>{{ tache.titre }}</td>
                <td>{{ tache.description }}</td>
                <td>{{ tache.deadline ? tache.deadline|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_tache_show', {'idTache': tache.idTache}) }}">show</a>
                    <a href="{{ path('app_tache_edit', {'idTache': tache.idTache}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tache_new') }}">Create new</a>
{% endblock %}
